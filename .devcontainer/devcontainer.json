{
  "name": "Python 3",
  "build": {
      "dockerfile": "Dockerfile",
      "args": {
          "VARIANT": "3"
      }
  },

  "runArgs": [
      "--user",
      "vscode"
  ],

  "extensions": [
      "ms-python.python"
  ],

  "settings": {
      "terminal.integrated.shell.linux": "/bin/bash"
  },

  "forwardPorts": [
      8000
  ],

  "appPort": 8000,

  "postCreateCommand": "pip install PyGithub"
}